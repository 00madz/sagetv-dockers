{
  "sagex": {
    "host"     : "{{PLEX_SAGETV_HOST}}",
    "port"     : "{{PLEX_SAGETV_PORT}}",
    "user"     : "{{PLEX_SAGETV_USERNAME}}",
    "password" : "{{PLEX_SAGETV_PASSWORD}}"
  },
  "plex": {
    "host"     : "localhost",
    "port"     : 32400
  },
  "scanner": {
    "ext"      : [".mpg", ".avi", ".mkv", ".mp4", ".ts", ".m4v"],
    "log"      : "%LOCALAPPDATA%\\Plex Media Server\\Logs\\sageplex_scanner.log",
    "debug"    : true
  },
  "agent": {
    "locking"  : true
  },

  "ignored":  {
    "log_win"  : "%LOCALAPPDATA%\\Plex Media Server\\Logs\\sageplex_scanner.log",
    "log_xp"   : "%USERPROFILE%\\Local Settings\\Application Data\\Plex Media Server\\Logs\\sageplex_scanner.log",
    "log_mac"  : "~/Library/Logs/sageplex_scanner.log",
    "log_lin"  : "{{PLEX_APP}}/Library/Application Support/Plex Media Server/Logs/sageplex_scanner.log",
    "dummy"    : "last"
  }
}