<?xml version="1.0" encoding="utf-8"?>
<Containers>
    <Beta>{{BETA}}</Beta>
    <Category>{{CATEGORY}}</Category>
    <Name>{{OWNER}}-{{CONTAINER}}-{{CONTAINER_POSTFIX}}</Name>
    <Description>
        {{DESCRIPTION}}
    </Description>
    <Overview>
        {{OVERVIEW}}
    </Overview>
    <Support>{{SUPPORT}}</Support>
    <Registry>https://hub.docker.com/r/{{OWNER}}/{{CONTAINER}}-{{CONTAINER_POSTFIX}}/</Registry>
    <GitHub>{{GITHUB}}</GitHub>
    <Repository>{{OWNER}}/{{CONTAINER}}-{{CONTAINER_POSTFIX}}</Repository>
    <BindTime>true</BindTime>
    <Privileged>true</Privileged>
    <Networking>
        <Mode>host</Mode>
        <Publish>
            <Port>
                <HostPort>8080</HostPort>
                <ContainerPort>8080</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>

            <!-- sagetv required ports -->
            <Port>
                <HostPort>42024</HostPort>
                <ContainerPort>42024</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
            <Port>
                <HostPort>7818</HostPort>
                <ContainerPort>7818</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
            <Port>
                <HostPort>8270</HostPort>
                <ContainerPort>8270</ContainerPort>
                <Protocol>udp</Protocol>
            </Port>
            <Port>
                <HostPort>31100</HostPort>
                <ContainerPort>31100</ContainerPort>
                <Protocol>udp</Protocol>
            </Port>
            <Port>
                <HostPort>31099</HostPort>
                <ContainerPort>31099</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
            <Port>
                <HostPort>16867</HostPort>
                <ContainerPort>16867</ContainerPort>
                <Protocol>udp</Protocol>
            </Port>
            <Port>
                <HostPort>16869</HostPort>
                <ContainerPort>16869</ContainerPort>
                <Protocol>udp</Protocol>
            </Port>
            <Port>
                <HostPort>16881</HostPort>
                <ContainerPort>16881</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
        </Publish>
    </Networking>
    <Environment>
        <Variable>
            <!-- install gentuner -->
            <Name>OPT_GENTUNER</Name>
            <Value>Y</Value>
        </Variable>
        <Variable>
            <!-- install command ir -->
            <Name>OPT_COMMANDIR</Name>
            <Value>Y</Value>
        </Variable>
        <Variable>
            <!-- Configure for COMSKIP -->
            <Name>OPT_COMSKIP</Name>
            <Value>Y</Value>
        </Variable>
        <Variable>
            <!-- SageTV License -->
            <Name>LICENCE_DATA</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <!-- SageTV Memory in MB -->
            <Name>JAVA_MEM_MB</Name>
            <Value>768</Value>
        </Variable>
        <Variable>
            <Name>PUID</Name>
            <Value>99</Value>
        </Variable>
        <Variable>
            <Name>PGID</Name>
            <Value>100</Value>
        </Variable>
        <Variable>
            <Name>VIDEO_GUID</Name>
            <Value>18</Value>
        </Variable>
    </Environment>
    <Data>
        <Volume>
            <HostDir>/mnt/user/apps/sagetv/</HostDir>
            <ContainerDir>/opt/sagetv</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
        <Volume>
            <HostDir>/mnt/user/media/sagetv/</HostDir>
            <ContainerDir>/var/media</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
        <Volume>
            <HostDir>/mnt/user/media/videos/</HostDir>
            <ContainerDir>/var/mediaext</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
    <WebUI>http://[IP]:[PORT:8080]/</WebUI>
    <Banner>https://raw.githubusercontent.com/OpenSageTV/sagetv-miniclient/master/playstore/ic_launcher-web.png</Banner>
    <Icon>https://raw.githubusercontent.com/OpenSageTV/sagetv-miniclient/master/playstore/ic_launcher-web.png</Icon>
    <ExtraParams></ExtraParams>
</Containers>